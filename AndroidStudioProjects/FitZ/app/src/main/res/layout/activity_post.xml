<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.atony.fitz.post">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutPost"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewPostUsername"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight=".06"
                android:paddingTop="5sp"
                android:paddingBottom="2sp"
                android:paddingLeft="10sp"
                android:text="Username"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonPostDelete"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="20dp"
                android:paddingRight="10dp"
                android:layout_weight=".013"
                android:text="delete"
                android:textSize="9dp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="1.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/line_post"
            ></LinearLayout>
        <TextView
            android:id="@+id/textViewPostInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Post text..."
            android:textSize="18dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/line_post"
            ></LinearLayout>
        <TextView
            android:id="@+id/textViewPostTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="1:10"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/line_post"
            ></LinearLayout>

    </LinearLayout>


</RelativeLayout>
